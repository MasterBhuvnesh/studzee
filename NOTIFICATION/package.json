{
  "name": "studzee-notification-api",
  "version": "1.2.0",
  "description": "A Bun server for handling Expo push Notification and Email Notification using Clerk and Prisma ( Postgres )",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prisma:generate": "bunx prisma generate",
    "prisma:migrate": "bunx prisma migrate dev",
    "prisma:push": "bunx prisma db push",
    "prisma:studio": "bunx prisma studio",
    "prisma:seed": "bun prisma/seed.ts",
    "docker:build": "docker-compose build",
    "docker: up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "do-release": "bash ../code.sh notification patch",
    "do-release:minor": "bash ../code.sh notification minor",
    "do-release:major": "bash ../code.sh notification major"
  },
  "keywords": [
    "expo",
    "push-notifications",
    "prisma",
    "postgresql",
    "bun",
    "typescript"
  ],
  "author": "Bhuvnesh Verma",
  "license": "ISC",
  "dependencies": {
    "@clerk/clerk-sdk-node": "^5.0.0",
    "@clerk/express": "^1.0.0",
    "@prisma/client": "^6.0.0",
    "axios": "^1.7.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.0.0",
    "helmet": "^8.0.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.15",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.30.0",
    "prettier": "^3.0.0",
    "prisma": "^6.0.0"
  }
}
