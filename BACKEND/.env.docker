# Server Configuration
PORT=4000
NODE_ENV=development

# CLerk (Demo) Configuration
CLERK_SECRET_KEY=sk_test_1234567890
CLERK_PUBLISHABLE_KEY=pk_test_1234567890

# MongoDB Configuration
MONGO_PORT=27017
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=password
MONGO_URI=mongodb://root:password@localhost:27017/contentdb
MONGO_EXPRESS_PORT=8081

# Redis Configuration
REDIS_PORT=6379
REDIS_INSIGHT_PORT=8001
REDIS_URL=redis://localhost:6379
REDIS_INSIGHT_URL=http://localhost:8001

# Cache TTL Configuration (in seconds)
LIST_CACHE_TTL=300
DOC_CACHE_TTL=86400
TODAY_CACHE_TTL=3600

# Logging and Authentication
LOG_LEVEL=info
DEV_TOKEN=token

# MinIO Storage Configuration
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=miniopassword
ME_CONFIG_BASICAUTH_USERNAME: minioadmin
ME_CONFIG_BASICAUTH_PASSWORD: miniopassword
MINIO_BUCKET_NAME=studzee-assets
MINIO_REGION=us-east-1
MINIO_ENDPOINT=http://localhost:9000
MINIO_CONSOLE_ENDPOINT=http://localhost:9001

# AWS SDK Compatibility (Mapping to MinIO)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=miniopassword
AWS_S3_BUCKET_NAME=studzee-assets
AWS_S3_BUCKET_ENDPOINT=http://localhost:9000
