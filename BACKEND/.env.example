# Server Configuration
PORT=4000
NODE_ENV=development

# Clerk Secret Key (get from your Clerk Dashboard)
CLERK_SECRET_KEY=sk_test_...
CLERK_PUBLISHABLE_KEY=pk_test_...

# MongoDB Configuration
MONGO_URI=mongodb://mongo:27017/contentdb
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=password
# Optional: For local connection outside Docker
# MONGO_URI_LOCAL=mongodb://localhost:27017/contentdb

# Redis Configuration
REDIS_URL=redis://redis:6379
# Optional: For local connection outside Docker
# REDIS_URL_LOCAL=redis://localhost:6379

# Cache Configuration
LIST_CACHE_TTL=300    # 5 minutes in seconds
DOC_CACHE_TTL=86400   # 24 hours in seconds

# Scheduler Configuration
JOB_CRON='0 0 * * *'  # Daily at midnight UTC

# Logging
LOG_LEVEL=info



# Development Authentication (optional, only for development mode)
# Set this to bypass Clerk authentication in development
DEV_TOKEN=your-dev-token-here

# AWS S3 Configuration
AWS_REGION= your_aws_s3_region
AWS_ACCESS_KEY_ID= your_aws_access_key_id
AWS_SECRET_ACCESS_KEY= your_aws_secret_access_key
AWS_S3_BUCKET_NAME= your_aws_s3_bucket_name